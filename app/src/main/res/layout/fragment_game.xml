<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/game_back_with_title"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvVictimName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:textSize="25sp"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:text="Zhulduz" />

    <ImageView
        android:id="@+id/imageViewVictim"
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:layout_alignTop="@+id/tvVictimName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <Button
        android:id="@+id/btn_i_killed"
        android:text="@string/i_killed"
        android:layout_marginTop="10dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewVictim"
        android:layout_toStartOf="@+id/tvVictimName" />
    <Button
        android:id="@+id/btn_i_was_killed"
        android:text="@string/i_was_killed"
        android:layout_marginTop="10dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewVictim"
        android:layout_toEndOf="@+id/tvVictimName" />




</RelativeLayout>