<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/itemContainer"
    android:background="#212121"
    android:alpha="0.7"
    android:layout_margin="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <ImageView
      android:layout_centerVertical="true"
      android:id="@+id/user_photo"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@mipmap/ic_launcher"
      android:layout_marginEnd="5dp"
      android:contentDescription="TODO" />
    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_photo"
        style="@style/requestedUsersText"/>
    <TextView
        android:id="@+id/user_surname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_photo"
        android:layout_below="@id/user_name_tv"
        android:layout_marginTop="3dp"
        style="@style/requestedUsersText"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_done_24dp"
        android:layout_toStartOf="@+id/rejectButton"
        android:background="@drawable/bg_btn_accept"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/rejectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_close_24dp"
        android:background="@drawable/bg_btn_accept"/>
    <TextView
        android:id="@+id/user_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
    />







</RelativeLayout>